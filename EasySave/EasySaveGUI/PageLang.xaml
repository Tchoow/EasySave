                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"></Setter>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock HorizontalAlignment="Left" Height="28" Text="A remplir" TextWrapping="Wrap" VerticalAlignment="Top" Margin="29,13,0,0" Width="155" Grid.RowSpan="1">
                <TextBlock.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"></Setter>
                    </Style>
                </TextBlock.Resources>
            </TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="29" Text="A remplir" TextWrapping="Wrap" VerticalAlignment="Top" Width="162" Margin="29,46,0,0"/>
            <TextBox HorizontalAlignment="Left" Height="29" Margin="380,46,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
