<Page x:Class="EasySaveGUI.PageJob"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EasySaveGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="250" />
            </Grid.RowDefinitions>
            <ScrollViewer Background="red" Height="150">
                <DataGrid x:Name="myDataGrid" AutoGenerateColumns="False" Height="300" BorderThickness=".2" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*" />
                        <DataGridTextColumn Header="Names" Binding="{Binding Names}" Width="*" />
                        <DataGridTextColumn Header="SourcePath" Binding="{Binding SourcePath}" Width="*" />
                        <DataGridTextColumn Header="DesPath" Binding="{Binding DesPath}" Width="*" />
                        <DataGridTextColumn Header="State" Binding="{Binding State}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>

            <Label Content="Label" HorizontalAlignment="Left" Margin="0,0,0,0"  VerticalAlignment="Top"/>


            <Grid VerticalAlignment="Top" Background="#f1f1f1" Margin="0,10,0,0"  Grid.Row="1" Height="191">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="49*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Name" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346"/>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Source Path" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346"/>
                <TextBlock Grid.Column="0"  Grid.Row="2" Text="Destination Pah" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346"/>
                <TextBlock Grid.Column="0" Grid.Row="3"  Text="Save Type" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1"  Grid.Row="3" HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346"/>
                <TextBlock Grid.Column="0" Grid.Row="4" Text="Date of creation" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346" IsEnabled="False"/>
                <TextBlock Grid.Column="0"  Grid.Row="5" Text="Date of modification" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Text="xxxxxxxxxxxxx" BorderThickness=".5" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="346"  IsEnabled="False"/>

            </Grid>


        </Grid>
    </Grid>
</Page>
